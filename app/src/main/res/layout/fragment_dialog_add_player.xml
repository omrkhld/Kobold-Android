<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="Add Player or Party"
        android:id="@+id/add_spinner"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/name_wrapper">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_spinner"
            android:hint="Name"
            android:id="@+id/name_edit"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_wrapper"
        android:layout_alignParentEnd="true"
        android:text="Create"
        android:visibility="invisible"
        android:id="@+id/create_party"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_wrapper"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/add_player_layout">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="Choose party"
            android:id="@+id/party_spinner"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Level"
            android:id="@+id/level_wrapper">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Level"
                android:inputType="number"
                android:id="@+id/level_edit"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Initative Modifier"
            android:id="@+id/init_wrapper">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Initative Modifier"
                android:inputType="numberSigned"
                android:id="@+id/init_edit"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HP"
            android:id="@+id/hp_wrapper">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="HP"
                android:inputType="number"
                android:id="@+id/hp_edit"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Create"
            android:id="@+id/create_player"/>
    </LinearLayout>
</RelativeLayout>