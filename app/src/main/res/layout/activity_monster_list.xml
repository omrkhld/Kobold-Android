<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="omrkhld.com.koboldfightclub.MonsterList.MonsterListActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:id="@+id/headers">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:text="Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:text="CR"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/headers"
        android:src="@drawable/list_divider"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headers"
        app:layoutManager="LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/fragment_monster">
    </android.support.v7.widget.RecyclerView>

    <omrkhld.com.koboldfightclub.RecyclerViewFastScroller
        android:id="@+id/fast_scroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/headers"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="56dp"
            android:minHeight="56dp"
            android:gravity="center"
            android:background="@drawable/fast_scroller_bubble"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="A" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center">

            <View
                android:id="@+id/scroll_bar"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorTrivial"
                android:layout_gravity="center" />

            <android.support.v7.widget.AppCompatImageView
                xmlns:appCompat="http://schemas.android.com/apk/res-auto"
                android:id="@+id/handle"
                android:layout_width="8dp"
                android:layout_height="40dp"
                appCompat:srcCompat="@drawable/fast_scroller_indicator"
                tools:ignore="RtlSymmetry"/>
        </FrameLayout>
    </omrkhld.com.koboldfightclub.RecyclerViewFastScroller>
</RelativeLayout>
